<% layout("layouts/boilerplate") %>

<!-- Hero Carousel -->
<style>
  .card {
    transition: transform 0.3s ease;
  }

  .card:hover {
    transform: scale(1.05);
  }
</style>

<div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="https://images.unsplash.com/photo-1564501049412-61c2a3083791?q=80&w=1932&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="d-block w-100" alt="Luxury Hotel">
      <div class="carousel-caption d-none d-md-block">
        <h1 class="display-4 fw-bold text-white">Experience Luxury</h1>
        <p class="lead">Stay at top-rated hotels worldwide</p>
      </div>
    </div>
    <div class="carousel-item">
      <img src="https://images.unsplash.com/photo-1688653802629-5360086bf632?q=80&w=1932&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="d-block w-100" alt="Beach Villa">
      <div class="carousel-caption d-none d-md-block">
        <h1 class="display-4 fw-bold text-white">Cozy Villas</h1>
        <p class="lead">Perfect getaways by the sea</p>
      </div>
    </div>
    <div class="carousel-item">
      <img src="https://antonovich-design.ae/uploads/post/2024/9/antonovich-design-2024vAZAtsV6UiBI.jpg" class="d-block w-100" alt="Mountain Resort">
      <div class="carousel-caption d-none d-md-block">
        <h1 class="display-4 fw-bold text-white">Nature Retreats</h1>
        <p class="lead">Unplug, unwind, and breathe</p>
      </div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon"></span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
    <span class="carousel-control-next-icon"></span>
  </button>
</div>

<!-- Features Section -->
<section class="container py-5">
  <div class="row text-center mb-5">
    <div class="col">
      <h2 class="fw-bold">Explore Our Categories</h2>
      <p class="text-muted">From mountain cabins to city luxury suites</p>
    </div>
  </div>
  
  <div class="row g-4">
    <div class="col-md-4">
      <div class="card border-0 shadow h-100">
        <img src="https://modernvillasco.com/wp-content/uploads/2024/05/designing-villa-7.jpg" class="card-img-top" alt="City Hotel">
        <div class="card-body p-3">
          <h5 class="card-title">City Hotels</h5>
          <p class="card-text">Stay in the heart of bustling cities with top-rated comfort and service.</p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card border-0 shadow h-100">
        <img src="https://plus.unsplash.com/premium_photo-1682377521753-58d1fd9fa5ce?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top" alt="Cabin">
        <div class="card-body p-3">
          <h5 class="card-title">Cabins & Retreats</h5>
          <p class="card-text">Escape the chaos with peaceful cabins in the woods and mountain tops.</p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card border-0 shadow h-100">
        <img src="https://images.unsplash.com/photo-1597682496035-b04f723202a4?q=80&w=2069&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top" alt="Spa Resort">
        <div class="card-body p-3">
          <h5 class="card-title">Spa Resorts</h5>
          <p class="card-text">Relax and rejuvenate in luxury with spa treatments and warm hospitality.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Call to Action -->
<section class="bg-light text-center py-5">
  <div class="container">
    <h3 class="fw-bold mb-3">Ready for your next adventure?</h3>
    <p class="text-muted mb-4">Book your dream stay today â€” from cozy cottages to seaside villas.</p>
    <a href="/listings" class="btn btn-dark btn-lg">Explore All Listings</a>
  </div>
</section>