<!-- ✅ Toast Container: Top Center Position -->
<!-- ✅ Toast Container (Top Center) -->
<div class="position-fixed top-0 start-50 translate-middle-x p-3" style="z-index: 1055;">
  <% if (success && success.length) { %>
    <div class="toast text-bg-success border-0 animate__animated animate__slideInDown" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="3000" data-bs-autohide="true">
      <div class="d-flex justify-content-center align-items-center toast-body fw-semibold text-center">
        ✅  <%= success %>
        <button type="button" class="btn-close btn-close-white ms-3" data-bs-dismiss="toast"></button>
      </div>
    </div>
  <% } %>

  <% if (error && error.length) { %>
    <div class="toast text-bg-danger border-0 animate__animated animate__slideInDown" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="3000" data-bs-autohide="true">
      <div class="d-flex justify-content-center align-items-center toast-body fw-semibold text-center">
         ⚠️ <%= error %>
        <button type="button" class="btn-close btn-close-white ms-3" data-bs-dismiss="toast"></button>
      </div>
    </div>
  <% } %>
</div>

<!-- ✅ Bootstrap + Animate.css -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/animate.css@4.1.1/animate.min.css" />

<!-- ✅ Bootstrap Bundle (includes Toast JS) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- ✅ JS to show all toasts -->
<script>
  document.querySelectorAll('.toast').forEach(toastEl => {
    const toast = new bootstrap.Toast(toastEl);
    toast.show();
  });
</script>